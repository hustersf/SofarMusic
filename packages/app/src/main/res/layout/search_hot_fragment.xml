<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:skin="http://schemas.android.com/android/skin"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingLeft="16dp"
  android:paddingRight="16dp">

  <RelativeLayout
    android:id="@+id/history_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:gravity="center"
      android:text="搜索历史"
      android:textColor="@color/text_black"
      android:textSize="@dimen/middle_text_size"
      android:textStyle="bold" />

    <com.sf.base.view.IconTextView
      android:id="@+id/clear_tv"
      style="@style/TitleIconTheme"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:text="@string/icon_dustbin"
      android:textColor="@color/text_gray"
      android:textSize="20sp" />

  </RelativeLayout>

  <com.sf.widget.flowlayout.FlowTagList
    android:id="@+id/history_tags"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tagColor="@color/themeColor"
    skin:enable="true"></com.sf.widget.flowlayout.FlowTagList>

  <TextView
    android:id="@+id/hot_title"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:gravity="center"
    android:text="热门搜索"
    android:textColor="@color/text_black"
    android:textSize="@dimen/middle_text_size"
    android:textStyle="bold"
    android:visibility="gone" />

  <com.sf.widget.flowlayout.FlowTagList
    android:id="@+id/hot_tags"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tagColor="@color/themeColor"
    skin:enable="true"></com.sf.widget.flowlayout.FlowTagList>


</LinearLayout>
