<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/manager_srf"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/local_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:id="@+id/local_icon_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/icon_phone"
                android:textColor="@color/themeColor"
                android:textSize="25sp"
                skin:enable="true" />

            <TextView
                android:id="@+id/local_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/local_icon_tv"
                android:text="本地音乐"
                android:textColor="@color/main_text_color"
                android:textSize="16sp"
                skin:enable="true" />

            <TextView
                android:id="@+id/local_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/local_tv"
                android:text="(0)"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:background="@color/half_light_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/down_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:id="@+id/down_icon_tv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/icon_download"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                skin:enable="true" />

            <TextView
                android:id="@+id/down_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/down_icon_tv"
                android:text="下载管理"
                android:textColor="@color/main_text_color"
                android:textSize="16sp"
                skin:enable="true" />

            <TextView
                android:id="@+id/down_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/down_tv"
                android:text="(0)"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:background="@color/half_light_gray" />


        </RelativeLayout>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
