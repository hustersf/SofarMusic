<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:skin="http://schemas.android.com/android/skin"
  android:layout_width="match_parent"
  android:layout_height="70dp"
  android:paddingLeft="16dp"
  android:paddingRight="16dp">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@+id/cover"
    android:orientation="vertical">

    <TextView
      android:id="@+id/name_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/text_black"
      android:textSize="@dimen/small_text_size" />

    <TextView
      android:id="@+id/artist_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:textColor="@color/text_gray"
      android:textSize="@dimen/super_little_text_size" />

  </LinearLayout>

  <com.sf.base.view.IconTextView
    android:id="@+id/voice_tv"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dp"
    android:layout_toLeftOf="@+id/duration_tv"
    android:gravity="center"
    android:text="@string/icon_voice"
    android:textColor="@color/themeColor"
    android:textSize="18sp"
    android:visibility="gone"
    skin:enable="true" />

  <TextView
    android:id="@+id/duration_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:layout_toLeftOf="@+id/more_tv"
    android:textColor="@color/text_gray"
    android:textSize="@dimen/super_little_text_size" />

  <com.sf.base.view.IconTextView
    android:id="@+id/more_tv"
    style="@style/TitleIconTheme"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:text="@string/icon_three_dot"
    android:textColor="@color/text_gray"
    android:textSize="20sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_alignParentBottom="true"
    android:background="@color/divider_line" />

</RelativeLayout>
