<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:skin="http://schemas.android.com/android/skin"
  android:layout_width="match_parent"
  android:layout_height="100dp"
  android:background="?attr/selectableItemBackground"
  android:clickable="true">

  <com.sf.base.widget.SofarImageView
    android:id="@+id/rank_iv"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:background="@drawable/placeholder_disk_210"
    android:transitionName="rank_head" />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/rank_iv"
    android:orientation="vertical">

    <TextView
      android:id="@+id/first_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="1.成都-赵雷"
      android:textColor="@color/main_text_color"
      android:textSize="12sp"
      skin:enable="true" />

    <TextView
      android:id="@+id/second_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="2.告白气球-周二柯"
      android:textColor="@color/main_text_color"
      android:textSize="12sp"
      skin:enable="true" />

    <TextView
      android:id="@+id/third_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="3.演员-薛之谦"
      android:textColor="@color/main_text_color"
      android:textSize="12sp"
      skin:enable="true" />

  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/rank_iv"
    android:background="@color/half_light_gray" />


</RelativeLayout>