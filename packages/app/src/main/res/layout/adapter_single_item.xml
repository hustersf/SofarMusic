<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:skin="http://schemas.android.com/android/skin"
  android:layout_width="match_parent"
  android:layout_height="50dp"
  android:background="?attr/selectableItemBackground"
  android:clickable="true">


  <com.sf.base.view.IconTextView
    android:id="@+id/voice_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="5dp"
    android:gravity="center"
    android:text="@string/icon_voice"
    android:textColor="@color/themeColor"
    android:textSize="16sp"
    skin:enable="true" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="50dp"
    android:layout_toRightOf="@+id/voice_tv"
    android:orientation="vertical">

    <TextView
      android:id="@+id/name_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="成都"
      android:textColor="@color/main_text_color"
      android:textSize="14sp"
      skin:enable="true" />

    <TextView
      android:id="@+id/player_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="周二柯"
      android:textColor="@color/text_gray"
      android:textSize="12sp" />
  </LinearLayout>

  <com.sf.base.view.IconTextView
    android:id="@+id/dot_tv"
    style="@style/TitleIconTheme"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:text="@string/icon_three_dot"
    android:textColor="@color/text_gray"
    android:textSize="20sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="40dp"
    android:background="@color/half_light_gray" />
</RelativeLayout>