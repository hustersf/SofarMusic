<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <ImageView
    android:id="@+id/music_iv"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_centerVertical="true" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/music_iv"
    android:orientation="vertical">

    <TextView
      android:id="@+id/music_name_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxWidth="80dp"
      android:singleLine="true"
      android:textColor="@color/main_text_color"
      android:textSize="14sp" />

    <TextView
      android:id="@+id/music_artist_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:maxWidth="80dp"
      android:singleLine="true"
      android:textColor="@color/text_gray"
      android:textSize="12sp" />
  </LinearLayout>

  <ImageView
    android:id="@+id/music_close_iv"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:src="@drawable/notify_cancel" />

  <ImageView
    android:id="@+id/music_next_iv"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dp"
    android:layout_toLeftOf="@+id/music_close_iv"
    android:src="@drawable/notify_next" />

  <ImageView
    android:id="@+id/music_play_iv"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_centerVertical="true"
    android:layout_marginRight="10dp"
    android:layout_toLeftOf="@+id/music_next_iv"
    android:src="@drawable/notify_pause" />

</RelativeLayout>