<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_horizontal"
  android:background="@color/white"
  android:orientation="vertical">

  <com.sf.widget.round.RoundImageView
    android:id="@+id/image0"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/author_head_img"
    app:cornerRadius="16dp" />

  <com.sf.widget.round.RoundImageView
    android:id="@+id/image1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/author_head_img"
    app:borderColor="@color/theme_green"
    app:borderWidth="3dp"
    app:cornerRadius="20dp" />

  <com.sf.widget.round.RoundImageView
    android:id="@+id/image2"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/author_head_img"
    app:borderColor="@color/theme_pink"
    app:borderWidth="5dp"
    app:cornerRadius="20dp"
    app:circle="true"
    app:maskColor="#60000000" />

  <com.sf.widget.round.RoundImageView
    android:id="@+id/image3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/author_head_img"
    app:borderColor="@color/theme_blue"
    app:borderWidth="5dp"
    app:cornerRadius="20dp"
    app:maskColor="#80000000" />

  <com.sf.widget.round.RoundImageView
    android:id="@+id/image4"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_marginTop="20dp"
    app:borderColor="@color/text_black"
    app:borderWidth="2dp"
    app:cornerRadius="20dp"
    app:circle="true" />

</LinearLayout>
